{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "schedule": [
        "every 3 weeks"
      ],
      "groupName": "all stable non-major dependencies",
      "groupSlug": "all-stable-minor-patch",
      "stabilityDays": 3,
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackageNames": [
        "prisma",
        "@prisma/client"
      ],
      "matchUpdateTypes": "major",
      "groupName": "Prisma",
      "stabilityDays": 3
    },
    {
      "matchPackageNames": [
        "react",
        "react-dom"
      ],
      "matchUpdateTypes": "major",
      "groupName": "React",
      "stabilityDays": 3
    },
    {
      "matchPackageNames": [
        "next",
        "eslint-config-next"
      ],
      "matchUpdateTypes": "major",
      "groupName": "Next.js",
      "stabilityDays": 3
    }
  ],
  "branchPrefix": "renovate-",
  "dependencyDashboard": true,
  "ignorePaths": [],
  "internalChecksFilter": "strict",
  "prCreation": "immediate",
  "rangeStrategy": "pin",
  "separateMultipleMajor": true,
  "stabilityDays": 3,
  "timezone": "Europe/Zurich",
  "vulnerabilityAlerts": {
    "automerge": true,
    "stabilityDays": 0
  }
}
